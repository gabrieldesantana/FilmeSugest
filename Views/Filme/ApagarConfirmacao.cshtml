@model FilmeModel

@{
    ViewData["Title"] = "Confirmar exclusão do filme";
}

<div class="text-center">
    <h3>Realmente deseja excluir o filme (@Model.Nome)?</h3>
    <div class="d-grid">
        <a class="btn btn-warning m-1" role="button" asp-controller="Filme" asp-action="Index">Cancelar exclusão</a>
        <a class="btn btn-danger m-1" role="button" asp-route-id="@Model.Id" asp-controller="Filme" asp-action="Apagar" >Confirmar exclusão</a>
    </div>
</div>